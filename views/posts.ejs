<a href="/posts/new"><button id="newbutton">New Post</button></a>
<table>
    <% Post.forEach(post => { %>
            
        <tr>
            <td>
                <% include attachments/attachment %>
            </td>
            <td>
                <h2> <%= post.title %> </h2>
            </td>
            <td>
                <a href="/posts/<%= post.id %>" class="button"><button>Show</button></a>
            </td>
            <td>
                <a href="/posts/<%= post.id %>/edit" class="button"><button>Edit</button></a>
            </td>
            <td>
                <a href="/posts/<%= post.id %>?_method=DELETE" onClick="return confirm('Delete: <%= post.title %>');" class="button"><button>Delete</button></a>
            </td>
            
        </tr>
    <% } ) %>
</table>
